<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:focusbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip">

    <View
        android:id="@+id/circle_action_color"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:background="@color/mine_textcolor" />

    <ImageView
        android:id="@+id/base_action_bar_home"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="8.0dip"
        android:src="@drawable/back" />

    <View
        android:id="@+id/left_block"
        android:layout_width="2.0dip"
        android:layout_height="14.0dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        android:layout_toRightOf="@id/base_action_bar_home"
        android:background="@color/block_line"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.0dip"
        android:src="@drawable/more_white" />

    <com.xh.study.bcy.widget.FocusButton
        android:id="@+id/focus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16.0dip"
        android:layout_toLeftOf="@id/iv_more"
        android:textSize="13.0sp"
        android:visibility="gone"
        focusbutton:boardColor="@color/white"
        focusbutton:unselectText="@string/focus"
        focusbutton:unselectedColor="@color/white"
        focusbutton:useDrawable="true" />

    <TextView
        android:id="@+id/base_action_bar_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="44.0dip"
        android:layout_toLeftOf="@id/focus_btn"
        android:layout_toRightOf="@id/left_block"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="18.0sp"
        android:visibility="gone" />
</RelativeLayout>