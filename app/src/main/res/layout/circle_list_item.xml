<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/work_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10.0dip">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_work"
            android:layout_width="54.0dip"
            android:layout_height="54.0dip"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:riv_corner_radius="2.0dip" />

        <ImageView
            android:id="@+id/go_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:src="@drawable/go_gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_toLeftOf="@id/go_circle"
            android:layout_toRightOf="@id/iv_work">

            <TextView
                android:id="@+id/tv_workname"
                style="@style/font_14_333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/my_like_name" />

            <TextView
                android:id="@+id/tv_workintro"
                style="@style/font_12_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_workname"
                android:layout_marginTop="2.0dip"
                android:ellipsize="end"
                android:lines="2" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/background" />
</LinearLayout>