<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44.0dip"
    android:id="@+id/float_head">
    <ImageView
        android:id="@+id/base_action_bar_home"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="8.0dip"
        android:src="@drawable/back" />

    <View
        android:id="@+id/left_block"
        android:layout_width="2.0dip"
        android:layout_height="14.0dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        android:layout_toRightOf="@id/base_action_bar_home"
        android:background="@color/block_line"
        android:visibility="visible" />

    <View
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <ImageView
        android:id="@+id/circle_search"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16.0dip"
        android:src="@drawable/search_whtie"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/circle_share"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="16.0dip"
        android:layout_toLeftOf="@id/circle_search"
        android:src="@drawable/share_actionbar"
        android:visibility="visible" />

    <TextView
        android:id="@+id/base_action_bar_title"
        style="@style/font_16_white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="12.0dip"
        android:layout_toLeftOf="@id/circle_share"
        android:layout_toRightOf="@id/left_block"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:visibility="visible" />
</RelativeLayout>