<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="53.0dip">

        <TextView
            android:id="@+id/ask_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey_ten_level"
            android:textSize="13.0sp" />

        <ImageView
            android:id="@+id/ask_item_del_img"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:src="@drawable/dislike_delete_card" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_ask"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ask_answer_head_img"
                android:layout_width="28.0dip"
                android:layout_height="28.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12.0dip"
                android:src="@drawable/user_pic_big" />

            <TextView
                android:id="@+id/ask_item_question_tv"
                style="@style/font_12_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_toLeftOf="@id/ask_answer_head_img"
                android:background="@drawable/qipao"
                android:lineSpacingExtra="4.0dip"
                android:paddingBottom="4.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="12.0dip"
                android:paddingTop="4.0dip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_ask"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="16.0dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="8.0dip"
                    android:layout_height="8.0dip"
                    android:layout_marginTop="6.0dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_solid_oval_e5e5e5_radius_8" />

                <TextView
                    android:id="@+id/ask_item_answer_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_toRightOf="@id/iv_pic"
                    android:lineSpacingExtra="6.0dip"
                    android:textColor="@color/my_like_name"
                    android:textSize="14.0sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/answer_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="8.0dip"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/block_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/ask_item_like_rly"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_weight="1.0"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ask_item_like_img"
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:layout_centerVertical="true"
                    android:padding="5.0dip"
                    android:src="@drawable/feed_parise" />

                <TextView
                    android:id="@+id/ask_item_likenumber_tv"
                    style="@style/font_12_666666"
                    android:layout_width="wrap_content"
                    android:layout_height="28.0dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/ask_item_like_img"
                    android:gravity="center_vertical"
                    android:paddingLeft="6.0dip" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.xh.study.bcy.widget.Space
        android:layout_width="fill_parent"
        android:layout_height="8.0dip" />
</LinearLayout>