<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accept_feed_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/rl_accept_feed"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip">

        <ImageView
            android:id="@+id/accept_feed_iv"
            android:layout_width="52.0dip"
            android:layout_height="32.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/switch_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/accept_feed_iv"
            android:text="@string/accept_feed"
            android:textColor="@color/mine_textcolor"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_accept_feed_bottom"
        android:layout_width="fill_parent"
        android:layout_height="32.0dip"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:textColor="@color/down_warn"
        android:textSize="12.0sp" />
</LinearLayout>