<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="6.0dip"
        android:src="@drawable/close_black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/base_action_bar"
        android:layout_marginTop="32.0dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.xh.study.bcy.widget.ScaleImageView
            android:id="@+id/start_logo_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_back"
            app:scale="0.27" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="24.0dip"
            android:paddingRight="24.0dip"
            android:paddingTop="20.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:background="@drawable/shape_solid_gray_radius_4">

                <com.xh.study.bcy.widget.MyAutoCompleteTextView
                    android:id="@+id/login_email_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:background="@null"
                    android:hint="@string/register_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/mine_textcolor"
                    android:textColorHint="@color/grey_ten_level"
                    android:textCursorDrawable="@null"
                    android:textSize="16.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_marginTop="16.0dip"
                android:background="@drawable/shape_solid_gray_radius_4">

                <TextView
                    android:id="@+id/forget_password"
                    style="@style/font_12_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7.0dip"
                    android:padding="8.0dip"
                    android:text="@string/password_forget" />

                <EditText
                    android:id="@+id/login_pass_edt"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:layout_marginLeft="12.0dip"
                    android:layout_toLeftOf="@id/forget_password"
                    android:background="@android:color/transparent"
                    android:hint="@string/register_pass"
                    android:inputType="textPassword"
                    android:textColor="@color/mine_textcolor"
                    android:textColorHint="@color/grey_ten_level"
                    android:textCursorDrawable="@null"
                    android:textSize="16.0sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_login"
                style="@style/font_16_white"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16.0dip"
                android:background="@drawable/shape_solid_pink_radius_4"
                android:gravity="center"
                android:text="@string/login_long" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ll_register"
                    style="@style/font_14_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16.0dip"
                    android:paddingTop="16.0dip"
                    android:text="@string/register_account" />

                <LinearLayout
                    android:id="@+id/not_login_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingBottom="16.0dip"
                    android:paddingTop="16.0dip">

                    <TextView
                        style="@style/font_14_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_show" />

                    <ImageView
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/go_pink" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16.0dip"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24.0dip"
            android:layout_marginRight="24.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                android:background="@color/block_line" />

            <TextView
                style="@style/font_14_b2b3b4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/other_way_login" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="8.0dip"
                android:layout_weight="1.0"
                android:background="@color/block_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56.0dip"
            android:layout_marginRight="56.0dip"
            android:layout_marginTop="24.0dip"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_weibo_login"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/iv_weibo_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/weibo_login_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_weibo_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8.0dip"
                    android:text="@string/weibo_login"
                    android:textColor="@color/font_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qq_login"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/iv_qq_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/qq_login_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_qq_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8.0dip"
                    android:text="@string/qq_login"
                    android:textColor="@color/font_color" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>