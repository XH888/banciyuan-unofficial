<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_action_bar"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="@color/white_fafafa">

    <ImageView
        android:id="@+id/base_action_bar_home"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dip"
        android:src="@drawable/back_black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/base_action_bar_home_text"
        android:layout_width="60.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4.0dip"
        android:gravity="center"
        android:text="@string/cancel_clear"
        android:textColor="@color/mine_textcolor"
        android:textSize="16.0sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/base_action_bar_title_lly"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="44.0dip"
        android:layout_marginRight="44.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/base_action_bar_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/mine_textcolor"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/base_action_bar_home_text_item"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="12.0dip"
            android:gravity="center"
            android:text="@string/hot_content"
            android:textColor="@color/mine_textcolor"
            android:textSize="16.0sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/base_action_bar_itemtwo"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_marginRight="12.0dip"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/base_action_bar_itemone"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_marginRight="12.0dip"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <TextView
            android:id="@+id/base_action_bar_home_text_btn"
            style="@style/font_14_white"
            android:layout_width="wrap_content"
            android:layout_height="28.0dip"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/shape_solid_pink_radius_4"
            android:gravity="center"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:text="@string/continue_write_series"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>